<?xml version="1.0" encoding="UTF-8"?>
<features name="universAAL-Ontologies" xmlns="http://karaf.apache.org/xmlns/features/v1.0.0">

	<!-- Change version of repository accordingly -->
	<repository>mvn:org.universAAL.middleware/mw.karaf.feature/2.0.0/xml/features</repository>
	<repository>mvn:org.universAAL.ontology/ont.karaf.feature/2.0.1-SNAPSHOT/xml/features</repository>
	<repository>mvn:org.universAAL.security/security.karaf.feature/2.0.1-SNAPSHOT/xml/features</repository>
	<repository>mvn:org.universAAL.ri/ri.karaf.feature/2.0.1-SNAPSHOT/xml/features</repository>

<feature name="uAAL-UI" description="The UI FW based on the Middleware 2.0"
		version="${pom.version}" resolver='(obr)'>
		<!-- Load all features -->
		<feature>uAAL-UI.DM</feature>
		<!--<feature>uAAL-UI.resource.server</feature> -->
		<feature>uAAL-UI.handler.web</feature>
		<feature>uAAL-UI.handler.gui.swing</feature>
		<feature>uAAL-UI.handler.gui.swing.BluesteelLAF</feature>
		<feature>uAAL-UI.handler.gui.swing.classicLAF</feature>
	</feature>
	
	<feature name="uAAL-UI.handler.gui.swing" description="The UI Swing Handler."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-MW</feature>
		<bundle start-level='76' start='true'>mvn:org.universAAL.ui/ui.handler.gui.swing/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-UI.handler.gui.swing.BluesteelLAF" description="The UI Swing Handler's LAF plugin for BlueSteel look and feel."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-UI.handler.gui.swing</feature>	
		<bundle>mvn:org.ufacekit.osgi/swingx.osgi/0.7.2</bundle>
		<!-- fragments like ui.handler.gui.swing.bluesteelLAF cannot be started 
			so leaving them in resolved state is enough-->
		<bundle start-level='77' start='false'>mvn:org.universAAL.ui/ui.handler.gui.swing.bluesteelLAF/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-UI.handler.gui.swing.classicLAF" description="The UI Swing Handler's LAF plugin for clasic look and feel."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-UI.handler.gui.swing</feature>	
		<bundle start-level='77'>wrap:mvn:org.universAAL.ui/ui.handler.gui.swing.classicLAF/2.0.0</bundle>
	</feature>
<!--
	<feature name="uAAL-UI.resource.server" description="The UI Resource Server."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-MW</feature>
		<bundle start-level='77' start='true'>mvn:org.universAAL.ui/ui.resource.server/2.0.0</bundle>
	</feature>
-->
	
	<feature name="uAAL-UI.handler.web" description="The UI Web Handler."
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-RI.Service.Gateway</feature>
		<bundle start-level='77' start='true'>mvn:org.universAAL.ui/ui.handler.web/2.0.0</bundle>
	</feature>
	
	<feature name="uAAL-UI.DM" description="The UI Dialog Manager"
		version="${pom.version}" resolver='(obr)'>
		<feature>uAAL-Ont.Profile.ui.mainmenu</feature>
		<feature>uAAL-Ont.Profile.ui.preferences</feature>
		<feature>uAAL-Ont.Impairment</feature>
		<feature>uAAL-Ont.Profile.userId</feature>
		<!-- <feature>uAAL-ctxt.Profiling.Server</feature> -->
		<bundle start-level='75' start='true'>mvn:org.universAAL.ui/ui.dm/2.0.0</bundle>
	</feature>
		
</features>
